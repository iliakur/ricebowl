# This file is separate from .zshrc so that I can also use it with bash.
# Editing this file with vim
alias myalias="vim $HOME/.aliases"

# Aliasing system commands
alias less="less -N"
alias mv="mv -v"
alias rm="rm -Rv"
alias cp="cp -v"

# Other System-level stuff
alias clean="rm -r ~/Downloads/*"
alias cpwd='printf %s "$(pwd)" | xclip -selection clipboard'
alias readings="cd ~/Dropbox/Readings"

# LaTeX
alias cln-tex="latexmk -c; rm *.bbl"
alias mk-tex="latexmk -pdf"

# Dot graphs
alias dirgraph='dot -Tpdf -O'
alias jpgraph='dot -Tjpg -O'

# Aliases for working with NLTK
alias nltkdev='cd ~/code/python/nltk'
alias mut='python -m pytest --cov=nltk/lm --cov-report term-missing nltk/test/unit/lm'
alias mdt='python -m pytest --cov=nltk/lm --cov-report term-missing --doctest-modules nltk/lm'
alias mrt='python -m pytest --doctest-glob="*.doctest" nltk/test/lm.doctest'
alias mat='tox -e py27 -e py35 nltk.test.unit.lm lm.doctest'

# Backup command (options):
# -a		general archiving, useful
# -r		have to explicitly specify this when using --files-from
# -v		gotta check this for now
# --delete	delete files in dest which are missing in src
# --files-from	read list of folders to back up from file
# --ignore-existing	Don't update/recreate existing files. Might remove this later
# --exclude=".*"	ignore hidden files
# --delete-excluded	delete any stray hidden files found in dest. might get rid of this later
alias backmeup='rsync -arv --delete --files-from=backup-spec --ignore-existing
--exclude=".*" --delete-excluded ~/ /media/quickbeam/5222-E566/backup'

# Jupyter shortcuts
alias jc='jupyter console'
alias jn='jupyter notebook'

# Scheme tab completion
# (requires rlwrap package) and the following file:
# https://gist.githubusercontent.com/bobbyno/3325982/raw/fc0208d287e56adc12b4c76114fcd21a107082ad/mit_scheme_bindings.txt
alias scheme="rlwrap -r -c -f ~/.scheme/mit_scheme_bindings.txt scheme"

# RTR-related
# -----------
# git checkout
function git_rtr_clone {
    git clone $1 && \
    echo "Moving into repo" && cd $(basename $1 .git) && \
    echo "Setting RTR email" && \
    git config --local user.email "ilia.kurenkov@retresco.de"
    git config --local user.name "Ilia Kurenkov"
}

# NVM setup
export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
